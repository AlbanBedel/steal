#!/usr/bin/env node
var program = require("commander"),
	steal = require("../node/index.js");

program.version("0.0.1")
	.parse(process.argv);

if(!program.args.length) {
	program.help();
}

steal("../build/build.js",
	"../build/js/js.js",
	"../build/css/css.js",
	"../build/apps/apps.js", function(){

	steal.build(program.args[0],{to: 'app'});

});
