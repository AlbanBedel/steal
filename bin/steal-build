#!/usr/bin/env node
var path = require("path"),
	program = require("commander"),
	steal = require("../node/index"),
	package = require("../package.json");

program.version(package.version)
	.usage("[options] <file ...>")
	.option("-t, --to [folder]", "Name of the application folder")
	.parse(process.argv);

// If no arguments are provided, show the help and exit.
if(!program.args.length) {
	program.help();
}

var inFile = program.args[0],
	toDirectory = program.to;
if(!toDirectory) {
	toDirectory = path.dirname(inFile);
}

steal("../build/build.js", function(build){

	build(inFile, { to: toDirectory });

});
